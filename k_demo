#define _USE_MATH_DEFINES 
#include <iostream>
#include <cmath>
using namespace std;

int main() {
	while (true)
	{
		double N, K, Ns, L = 0.0;
		L = 0.430;
		cout << "请输入一个N值";
		cin >> Ns;
		K = ((-(1.0 / L) * log(1 - Ns / 100.0)));
		cout << "K的值是：" << K << endl;
		cout << "请输入一个K值";
		cin >> K;
		N = 100 * (1 - pow(M_E, -(L / 2) * K));
		Ns = 1 - pow(M_E, 0.430 / (L / 2) * log(1 - N / 100));
		cout << "N的值是：" << N << " Ns的值是：" << Ns << endl;
	
	}
	return 0;
}
